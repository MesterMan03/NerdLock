{
    "exclude": ["node_modules"],
    "include": ["src", "customTypes"],
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "outDir": "dist",
        "lib": ["ES2022", "DOM", "DOM.Iterable", "Webworker.Iterable", "WebWorker.ImportScripts"],
        "typeRoots": ["node_modules/@types", "customTypes"],
        "types": ["node"],
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "allowUnreachableCode": true
    }
}